<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_light">

    <!-- AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Freelance Home"
        android:background="@color/primary_500"
        android:elevation="4dp"
        android:titleTextColor="@color/on_primary"
        app:titleCentered="true" />

    <!-- Main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Role"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/on_surface"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Wallet Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWalletBalance"
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_wallet"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_bids"
                        android:tint="@color/white"
                        android:contentDescription="Wallet Balance"
                        tools:ignore="UseAppTint"/>

                    <TextView
                        android:id="@+id/tvWalletBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet Balance: $0.00"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Client Section -->
            <LinearLayout
                android:id="@+id/clientSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Tools"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <!-- Post Job Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPostJob"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/card_post_job"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_post_job"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post Job"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- My Jobs Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMyJobs"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/card_my_jobs"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_my_jobs"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Jobs"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Client Bids Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardClientBids"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_bids"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_my_bids"
                                android:tint="@color/white"
                                android:contentDescription="Client Bids"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Client Bids"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Client Deliveries Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardClientDeliveries"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_deliveries"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_delivery"
                                android:tint="@color/white"
                                android:contentDescription="Client Deliveries"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Client Deliveries"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Add Funds Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAddFunds"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_funds"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_funds"
                                android:tint="@color/white"
                                android:contentDescription="Add Funds"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Funds"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Payment Report Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPaymentReport"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_reports"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_payment_report"
                                android:tint="@color/white"
                                android:contentDescription="Payment Report"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Report"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
            </LinearLayout>

            <!-- Freelancer Section -->
            <LinearLayout
                android:id="@+id/freelancerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Freelancer Tools"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <!-- Browse Jobs Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardBrowseJobs"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/info"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_browse_jobs"
                                android:tint="@color/white"
                                android:contentDescription="Browse Jobs"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Browse Jobs"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- My Bids Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMyBids"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_bids"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_my_bids"
                                android:tint="@color/white"
                                android:contentDescription="My Bids"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Bids"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Freelancer My Jobs Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFreelancerMyJobs"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/card_my_jobs"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_my_jobs"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint"/>

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Jobs"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Withdraw Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardWithdraw"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/error"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_withdraw"
                                android:tint="@color/white"
                                android:contentDescription="Withdraw Balance"
                                tools:ignore="UseAppTint" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Withdraw Balance"
                                android:textSize="18sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                       android:id="@+id/cardFreelancerPaymentReport"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_reports"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_payment_report"
                                    android:tint="@color/white"
                                    android:contentDescription="Payment Report"
                                    tools:ignore="UseAppTint" />

                                <TextView
                                    android:id="@+id/tvPaymentReportTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Payment Report"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <!-- Add a summary or key payment info below title -->


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <!-- Wishlist Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardWishlist"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/card_wishlist_pink"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_wishlist"
                        android:tint="@color/white"
                        android:contentDescription="Wishlist"
                        tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wishlist"
                            android:textSize="18sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
            </LinearLayout>

            <!-- Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/card_profile"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        android:tint="@color/white"
                        android:contentDescription="Profile"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bottom_nav_background"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="24dp"
        app:itemRippleColor="@android:color/transparent"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>