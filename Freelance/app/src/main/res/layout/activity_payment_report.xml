<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#fff">

    <!-- Header layout for columns -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee">

        <TextView
            android:id="@+id/tvJobTitleHeader"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvFreelancerNameHeader"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Freelancer"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvAmountHeader"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:gravity="end"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPaymentDateHeader"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="end"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Your RecyclerView below -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/paymentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"/>

</LinearLayout>
